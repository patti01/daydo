 <div class="main-img">
  <div class="container-form">
    <div class="row row-custom">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="form-login">
          <div class="logo-baseline">
            <%= image_tag "https://res.cloudinary.com/patti01/image/upload/v1562777938/daydo-logo_m5aowx.png", style: 'width:200px;'  %>
            <p>Organising made simple</p>
          </div>
          <h2>Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,required: false, autofocus: true, input_html: { autocomplete: "email" } %>
              <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
        </div>
        <div class="container-clippath">
        <div class="clip-path-box"></div>
        </div>
        <div class="form-login-bottom">
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn" %>
            <% unless current_user %>   <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %><% else %>  <%= current_user[:name] %>  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
            <% end %>
            <div class="links-section">
              <%= render "devise/shared/links" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
