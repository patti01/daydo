<%= simple_form_for(task, remote: true) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, input_html: {class: "form-inputs"}, data:
      {autocomplete_source: Task.pluck(:title)}, label: 'Title' %>
    <%= f.input :sort_priority, input_html: {class: "form-inputs"}, label: 'Priority' %>
    <%= f.input :deadline, input_html: {class: "form-inputs"}, as: :date, html5: true, label: "Deadline" %>
    <div class="form-check">
      <%= f.input :completed, input_html: {class: "form-check-input"}, label: 'Task done?' %>
    </div>
    <%= f.submit "Edit", class: "btn-task btn-black"%>
  </div>
<% end %>

