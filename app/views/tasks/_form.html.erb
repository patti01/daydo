<%= simple_form_for(@task, remote: true) do |f| %>

  <div class="form-inputs">
    <%= f.input :title%>

    <%= f.input :deadline %>
    <% unless f.object.new_record? %>
      <%= f.input :sort_priority %>
      <%= f.input :completed %>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create my task", class: "btn"  %>
  </div>
<% end %>
